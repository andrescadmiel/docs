{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "appearance": {
    "default": "light",
    "strict": true
  },
  "background": {
    "color": {
      "light": "#f7f7f7",
      "dark": "#000000"
    }
  },
  "name": "WikiChat Documentación",
  "colors": {
    "primary": "#0057ff",
    "light": "#0057ff",
    "dark": "#0057ff"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentación",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["introduction", "quickstart", "development"]
          },
          {
            "group": "Customization",
            "pages": ["essentials/settings", "essentials/navigation"]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Tutoriales",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Comunidad",
          "href": "https://mintlify.com/community",
          "icon": "slack"
        },
        {
          "anchor": "Cursos",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/white.png",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Iniciar sesión",
        "href": "mailto:support@wikichat.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Escritorio",
      "href": "https://dashboard.wikichat.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "instagram": "https://instagram.com/wikichatio"
    }
  }
}
